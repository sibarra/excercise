%h1= @category.name
=link_to t('categories.edit'), edit_usercp_category_path( @category.id )

%h2= t('categories.subcategories_for')
- @category.subcategories.each do |s|
  %li= link_to s.name, usercp_category_subcategory_path( @category, s )

%li= link_to t('subcategories.new'), new_usercp_category_subcategory_path( @category )
