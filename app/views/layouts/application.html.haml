!!!5
%html{ :class => "#{controller_name} #{controller_name}-#{action_name}" }
  %head
    - if content_for?(:title)
      %title= yield(:title)
    - else
      %title= t('main.title')
    = stylesheet_link_tag "application", :media => 'all'
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    = render '/layouts/nav'
    = render '/layouts/messages'
    = yield
